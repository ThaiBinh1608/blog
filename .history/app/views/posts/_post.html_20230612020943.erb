<div id="<%= dom_id post %>">
<div class="post">
    <table class="table border">
    <thead>
      <tr>
        <th><h2><%= post.title %></h2></th>
      </tr>
    </thead>
    <%= image_tag(post.image,class:)%>
    <tbody>
        <tr>
          <td><%= post.body %></td>     
        </tr>
    </tbody>
  </table>
      <h6>Tác giả: <%= link_to post.user.full_name, user_path(post.user) %></h6>
      <h6><%= pluralize(post.views, "view") %></h6>
  </div>
</div>
