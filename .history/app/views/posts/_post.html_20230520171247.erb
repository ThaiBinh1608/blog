<div id="<%= dom_id post %>">
<div class="c">
    <table class="table border">
    <thead>
      <tr>
        <th>Id</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= user.full_name %></td>     
        </tr>
    </tbody>
  </table>
  <h2><%= post.title %></h2>
