<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Posts</h1>
    <%= link_to "New post", new_post_path ,class:"btn btn-primary"%>
  <div id="posts" class="mt-3" >
    <div class ="row ">
   
    <div class = "col-4 card ">
     <h4><%= post.title %></h4>
      <h6>posted by <%= link_to post.user.full_name, user_path(post.user) %></h6>
      <p >
        <%= link <% @posts.each do |post| %>_to "Show this post", post,class:"btn btn-primary" %>
      </p>
      </div>
    <% end %>
  </div>

</div>
