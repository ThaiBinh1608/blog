<p style="color: green"><%= notice %></p>
<div class="container">
  <h1>Posts</h1>
    <%= link_to "New post", new_post_path ,class:"btn btn-primary"%>
  <div id="posts" class="mt-3" >
    <div class ="row ">
    <% @posts.each do |post| %>
    <div class = "col-4 card justify-content-center align-items-center ">
     <h4><%= post.title %></h4>
      <h6>Tác giả <%= link_to post.user.full_name, user_path(post.user) %></h6>
      <p >
        <%= link_to "Show this post", post,class:"btn btn-primary" %>
      </p>
      </div>
    <% end %>
  </div>

</div>
