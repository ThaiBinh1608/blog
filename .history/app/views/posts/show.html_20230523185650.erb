
<div class="container">
<div>
<%= render @post %>


<div class="d-flex " >
  <%= link_to "Edit this post", edit_post_path(@post),class:"btn  btn-warning m-2" %> 
  <%= link_to "Back to posts", posts_path ,class:"btn btn-primary m-2"%>
  <%= button_to "Destroy this post", @post, method: :delete ,class:"btn btn btn-danger m-2"%>
</div>
</div>
<div class="container">
  <%= render 'comments/form', post: @post, comment: @post.comments.build , submit_label: "Trả lời"  %>
  <% @comments.each do |comment|%>
    <%= render 'comments/comment', post: @post,comment: comment %>
  <% end %>
</div>
