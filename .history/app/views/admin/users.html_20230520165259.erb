<div class="container">
  <h1 class="text-center">Adminstrator</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-light table-striped border">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">user</th>
        <th scope="col">email</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.full_name %></td>
          <td><%= user.email %></td>
          <td> <%= button_to "Delete", @user, method: :des, data: { confirm: "Are you sure?" }, class:"btn btn-danger m-1" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
