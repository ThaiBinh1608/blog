<div class="container card">
  <h1>My Personal Home Page</h1>
  <p>You can read more about me, or checkout my blog.</p>
  <div class="card-actions mb-3">
    <%= link_to "Blog", posts_path, class:"btn btn-primary" %>
    <%= link_to "Project", projects_path, class:"btn btn-primary" %>
  </div>
</div>
<% if current_user %>
  <div class="container card mt-4">
    <h2>User Info:</h2>
    <h6><%= current_user.full_name %></h6>
    <div class="d-flex">
   <div><%= image_tag(current_user.avatar, style:"width:150px; height: 150px; border-radius:100%") if current_user.avatar.attached? %></div>
    <ul>
      <li><%= current_user.email %></li>
      <li><%= current_user.address.street.titleize %></li>
      <li><%= current_user.address.city.titleize %></li>
      <li><%= current_user.address.state.titleize %></li>
      <li><%= current_user.address.zip %></li>
      <li><%= current_user.address.country.titleize %></li>
    </ul>
    </div>
  </div>
<% end %>
